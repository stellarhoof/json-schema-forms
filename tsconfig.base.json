{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noErrorTruncation": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "isolatedModules": true,
    "composite": true,
    "types": ["vitest/importMeta"]
  }
}
